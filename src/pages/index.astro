								<a href="javascript:void(0)" class="play-icon" data-bs-toggle="modal" data-bs-target="#myModal3">
									<img src="/video-icon.webp" width="116" height="116" alt="" title="" class="img-fluid">
								</a>
							</div>
						</div>
					</div>

					</div>
				</div>
			</div>
		</div>
	</section>
	<Footer></Footer>
	<ExternalScripts></ExternalScripts>

</Layout>

